package projects

import "bduckdotdev/internal/views/layout"
import "bduckdotdev/internal/views/ui"
import "bduckdotdev/internal/content"

templ Page(posts []content.Post) {
	@layout.Root("Projects") {
		<section class="p-3 max-w-prose mx-auto">
			<h1 class="text-3xl font-semibold tracking-tight">
				My Projects
			</h1>
			<p class="">Writeups for some of my projects. There's a lot more projects on my GitHub, and I'll do the pages for them soon.</p>
		</section>
		@ui.PostsSection(posts, "projects")
	}
}
